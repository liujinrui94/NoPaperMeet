<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splashTheme" parent="AppTheme.NoActionBar.Login">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.Login"></style>

    <style name="AppTheme.NoActionBar.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyTabButton">
        <item name="android:layout_weight">1</item>
        <!-- 水平居中 -->
        <item name="android:gravity">center</item>
        <!-- 字体样式 -->
        <item name="android:textColor">@drawable/tab_font</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/meet_sign_radio_button_background</item>

    </style>

    <style name="tablayoutIcon" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="sign_title">
        <!-- 字体加粗 -->
        <item name="android:textStyle">normal</item>
        <item name="background">@drawable/btn_background</item>
        <!-- 字体大小 -->
        <item name="android:textSize">15.0dip</item>
        <!-- 文字过长的省略显示 -->
        <!-- 当文本不能正常现实的时候后面用..表示 -->
        <item name="android:background">@color/background_bule</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ApplySayBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BaseBtn">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseBtn.MeetBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MeetLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MeetTitleTxt">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="MeetContentTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="MeetDetailLable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/top_title_text</item>
    </style>

    <style name="MeetDetailValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="MeetDetailItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

</resources>
