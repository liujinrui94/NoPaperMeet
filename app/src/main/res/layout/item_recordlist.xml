<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_recordlist_tvtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_bottom_margin"
        android:background="@drawable/bg_jinxingzhong"
        android:gravity="center"
        android:minHeight="@dimen/menu_height"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/item_recordlist_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:text="2017-03-01 16:24" />

    <TextView
        android:id="@+id/item_recordlist_tv_content"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/card_bottom_margin"
        android:layout_marginLeft="@dimen/card_left_margin"
        android:layout_marginRight="@dimen/card_right_margin"
        android:textColor="@color/menu_content_txt"
        android:textSize="@dimen/text_size_16" />


    <TextView
        android:id="@+id/item_recordlist_delete"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_jinxingzhong"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>
